pipeline {
    agent any
    tools {
        maven 'M3'  // Assure-toi que 'M3' est bien configur√© dans Jenkins
    }
    stages {
        stage('Preparation') {
            steps {
                git 'https://github.com/jglick/simple-maven-project-with-tests.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    try {
                        if (isUnix()) {
                            sh "'${tool 'M3'}/bin/mvn' -Dmaven.test.failure.ignore clean package"
                        } else {
                            bat "\"${tool 'M3'}\\bin\\mvn\" -Dmaven.test.failure.ignore clean package"
                        }
                    } catch (Exception e) {
                        echo "Erreur lors du build : ${e}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('Results') {
            steps {
                junit '**/target/surefire-reports/TEST-*.xml'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
